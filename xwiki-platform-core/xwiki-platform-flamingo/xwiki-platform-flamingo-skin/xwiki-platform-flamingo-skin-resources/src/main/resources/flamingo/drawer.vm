#macro(drawerItem $url $icon $text $id)
  <li class="drawer-menu-item">
    <a href="$url" #if($id)id="$id"#end>
      <div class="drawer-menu-item-icon">
        <span class="glyphicon glyphicon-${icon}"></span>
      </div>
      <div class="drawer-menu-item-text">$text</div>
    </a>
  </li>
#end
